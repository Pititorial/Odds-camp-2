<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h2 class="text-center">สมัครสมาชิก</h2>
        </div>
        <div class="card-body">
          <%= form_with(model: @user, local: true) do |f| %>
            <% if @user.errors.any? %>
              <div class="alert alert-danger">
                <h4><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h4>
                <ul>
                  <% @user.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="form-group mb-3">
              <%= f.label :email, "อีเมล" %>
              <%= f.email_field :email, class: "form-control" %>
            </div>

            <div class="form-group mb-3">
              <%= f.label :username, "ชื่อผู้ใช้" %>
              <%= f.text_field :username, class: "form-control" %>
            </div>

            <div class="form-group mb-3">
              <%= f.label :first_name, "ชื่อ" %>
              <%= f.text_field :first_name, class: "form-control" %>
            </div>

            <div class="form-group mb-3">
              <%= f.label :last_name, "นามสกุล" %>
              <%= f.text_field :last_name, class: "form-control" %>
            </div>

            <div class="form-group mb-3">
              <%= f.label :password, "รหัสผ่าน" %>
              <%= f.password_field :password, class: "form-control" %>
            </div>

            <div class="form-group mb-3">
              <%= f.label :password_confirmation, "ยืนยันรหัสผ่าน" %>
              <%= f.password_field :password_confirmation, class: "form-control" %>
            </div>

            <div class="form-group text-center">
              <%= f.submit "สมัครสมาชิก", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div> 